<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/starwallpaper"
    tools:context=".MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/softOrange"
            android:text="click the button to create a tale"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/regular"
            android:background="@drawable/border"
            android:padding="20dp"/>

        <Button
            android:id="@+id/creatorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:fontFamily="@font/regular"
            android:backgroundTint="@color/softOrange"
            android:onClick="creatorButtonClicked"
            android:text="create a tale" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>